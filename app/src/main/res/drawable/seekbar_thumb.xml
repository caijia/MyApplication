        <shape
            android:shape="oval">
            <size android:width="12" android:height="12" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape
            android:shape="oval">
            <size android:width="12" android:height="12" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>

    <item>
        <shape
            android:shape="oval">
            <size android:width="12" android:height="12" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>
</selector>