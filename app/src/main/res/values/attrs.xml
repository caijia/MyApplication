<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SlidingMenuLayout">
        <attr name="menu_width_percent" format="float"/>
        <attr name="menu_parallax" format="float"/>
    </declare-styleable>

    <declare-styleable name="ProgressView">
        <attr name="pv_color" format="color"/>
        <attr name="pv_max" format="integer"/>
        <attr name="pv_progress" format="integer"/>
        <attr name="pv_direction">
            <enum name="left" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="RefreshLayout">
        <attr name="dragRadio" format="float"/>
        <attr name="animation_duration" format="integer" />
        <attr name="complete_delay_duration" format="integer" />
        <attr name="refreshing_pin_header" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CircleIndicator">
        <attr name="radius" format="dimension" />
        <attr name="selectedColor" format="color" />
        <attr name="normalColor" format="color" />
        <attr name="space" format="dimension" />
        <attr name="smoothScroll" format="boolean" />
    </declare-styleable>

    <declare-styleable name="LoadMoreFooterView">
        <attr name="loading_text" format="string"/>
        <attr name="error_text" format="string"/>
        <attr name="end_text" format="string"/>
        <attr name="lf_color" format="color"/>
    </declare-styleable>
</resources>